var containerDiv = document.createElement("DIV")
containerDiv.className = "notification is-danger"
containerDiv.setAttribute('data-controller', 'flash')
containerDiv.setAttribute('data-target', 'flash.notification')

var deleteButton = document.createElement("BUTTON")
deleteButton.className="delete"
deleteButton.setAttribute("data-action", "flash#delete")
containerDiv.appendChild(deleteButton)

var ul = document.createElement("UL")

<% @hackathon.errors.full_messages.each do |error| %>
  var tempLi = document.createElement("LI")
  tempLi.textContent = "<%= raw(error) %>";
  ul.appendChild(tempLi)
<% end %>

containerDiv.appendChild(ul)

var prependTo = document.getElementById('new-hackathon-form')
prependTo.insertBefore(containerDiv, prependTo.childNodes[0])