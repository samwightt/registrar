<!DOCTYPE html>
<html>
  <head>
    <title>Registrar</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="has-navbar-fixed-top">
  
    <nav class="navbar is-fixed-top is-dark" role="navigation" aria-label="main navigation" data-controller="main-nav">
      <div class="container">
        <div class="navbar-brand">
          <a class="navbar-item">Application Name</a>

          <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarContentHolder" data-action="click->main-nav#toggle">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </a>
        </div>

        <div id="navbarContentHolder" class="navbar-menu" data-target="main-nav.menu">
          <div class="navbar-end">
            <a class="navbar-item">Home</a>
            <a class="navbar-item">Example</a>
            <div class="navbar-item has-dropdown is-hoverable">
              <a class="navbar-link">Account</a>
              <div class="navbar-dropdown">
                <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "navbar-item" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
